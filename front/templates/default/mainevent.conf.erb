<Virtualhost *:80>
    <Directory /var/www/mainevent/current/event-api/public>
        Options MultiViews Indexes SymLinksIfOwnerMatch IncludesNoExec
        AllowOverride all
        Require all granted
    </Directory>
    ServerName <%= node[:mainevent][:front_dnsname] %>
    DocumentRoot /var/www/mainevent/current/event-api/public/
    ErrorLog /var/www/mainevent/current/event-api/storage/logs/error.log
    CustomLog /var/www/mainevent/current/event-api/storage/logs/access.log combined
</VirtualHost>
