{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "VpcId" : {
            "Type" : "String",
            "Description" : "VPC Id",
            "Default" : "%vpc_id%"
        },
        "DefaultSubnetId" : {
            "Type" : "String",
            "Description" : "AZ 1 subnet id",
            "Default" : "%vpc_subnet_id%"
        },
        "DefaultSshKeyName" : {
            "Type" : "String",
            "Description" : "The default ssh key name",
            "Default" : "%ssh_keyname%"
        },
        "SQS" : {
            "Type" : "String",
            "Description" : "SQS Queue to read events from",
            "Default" : "%sqs_name%"
        },
        "SQSRegion" : {
            "Type" : "String",
            "Description" : "SQS Region",
            "Default" : "%sqs_region%"
        },
        "ElasticSearchServiceEndpoint" : {
           "Type" : "String",
           "Description" : "hostname of the ESS host",
           "Default" : "%elasticsearch_host%"
       }
    },
    "Resources": {
        "stack": {
            "Type": "AWS::OpsWorks::Stack",
            "Properties": {
                "Name": {
                    "Ref": "AWS::StackName"
                },
                "UseCustomCookbooks": "true",
                "CustomCookbooksSource": {
                    "Type": "git",
                    "Url": "https://github.com/maineventio/opsworks.git"
                },
                "ChefConfiguration": {
                    "BerkshelfVersion": "3.2.0",
                    "ManageBerkshelf": true
                },
                "CustomJson": {
                    "aws": {
                        "access_key": "%aws_access_key%",
                        "secret_key": "%aws_secret_key%"
                    },
                    "mainevent": {
                        "front_dnsname": "%dns_name%"
                    },
                    "logstash": {
                        "sqs_queue": "%sqs_name%",
                        "sqs_region": "%sqs_region%",
                        "es_host": "%elasticsearch_host%",
                        "es_region": "%elasticsearch_region%"
                    }
                },
                "ConfigurationManager": {
                    "Name": "Chef",
                    "Version": "11.10"
                },
                "VpcId": {
                    "Ref": "VpcId"
                },
                "DefaultSubnetId": {
                    "Ref": "DefaultSubnetId"
                },
                "DefaultSshKeyName": {
                    "Ref": "DefaultSshKeyName"
                },
                "DefaultRootDeviceType": "ebs",
                "DefaultOs": "Amazon Linux 2015.09",
                "ServiceRoleArn": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:iam::",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":role/aws-opsworks-service-role"
                        ]
                    ]
                },
                "DefaultInstanceProfileArn": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:iam::",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":instance-profile/aws-opsworks-ec2-role"
                        ]
                    ]
                }
            }
        },
        "sgFrontElb": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "VpcId"
                },
                "GroupDescription": "Front-end security group",
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "-1",
                        "FromPort" : "-1",
                        "ToPort" : "-1",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ],
                "SecurityGroupEgress" : [
                    {
                        "IpProtocol" : "-1",
                        "FromPort" : "-1",
                        "ToPort" : "-1",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ]
            }
        },
        "sgFront": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "VpcId"
                },
                "GroupDescription": "Front Stack security group",
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : "80",
                        "ToPort" : "80",
                        "CidrIp" : "0.0.0.0/0"
                    },
                    {
                        "IpProtocol" : "-1",
                        "FromPort" : "-1",
                        "ToPort" : "-1",
                        "SourceSecurityGroupId": {"Ref": "sgFrontElb"}
                    }
                ],
                "SecurityGroupEgress" : [
                    {
                        "IpProtocol" : "-1",
                        "FromPort" : "0",
                        "ToPort" : "65535",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ]
            }
        },
        "sgLogstash": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "VpcId"
                },
                "GroupDescription": "Logstash security group",
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "-1",
                        "FromPort" : "-1",
                        "ToPort" : "-1",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ],
                "SecurityGroupEgress" : [
                    {
                        "IpProtocol" : "-1",
                        "FromPort" : "-1",
                        "ToPort" : "-1",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ]
            }
        },
        "sgDash": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "VpcId"
                },
                "GroupDescription": "Dash security group",
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : "80",
                        "ToPort" : "80",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ],
                "SecurityGroupEgress" : [
                    {
                        "IpProtocol" : "-1",
                        "FromPort" : "-1",
                        "ToPort" : "-1",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ]
            }
        },
        "elbFront": {
            "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
            "Properties": {
                "Listeners": [
                    {
                        "LoadBalancerPort": "80",
                        "InstancePort": "80",
                        "Protocol": "HTTP"
                    }
                ],
                "HealthCheck": {
                    "Target": "HTTP:80/_cluster/health",
                    "HealthyThreshold": "2",
                    "UnhealthyThreshold": "2",
                    "Interval": "10",
                    "Timeout": "2"
                },
                "SecurityGroups": [
                    {"Ref": "sgFrontElb"}
                ],
                "Subnets": [
                    {"Ref": "DefaultSubnetId"}
                ],
                "Scheme": "internet-facing",
                "CrossZone": true
            }
        },
        "roleFront": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version" : "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [ "ec2.amazonaws.com" ]
                            },
                            "Action": [ "sts:AssumeRole" ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "elasticsearch-aws-plugin",
                        "PolicyDocument": {
                            "Version" : "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": "EC2:Describe*",
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "profileFront": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Path": "/",
                "Roles": [
                    {"Ref": "roleFront"}
                ]
            }
        },
        "layerFront": {
            "Type": "AWS::OpsWorks::Layer",
            "Properties": {
                "StackId": {
                    "Ref": "stack"
                },
                "Name": "Front",
                "Type": "php-app",
                "Shortname": "front",
                "CustomRecipes": {
                    "Setup": [
                        "front"
                    ]
                },
                "EnableAutoHealing": "true",
                "AutoAssignElasticIps": "false",
                "AutoAssignPublicIps": "true",
                "InstallUpdatesOnBoot": "true",
                "CustomSecurityGroupIds": [
                    {
                        "Fn::GetAtt": [
                            "sgFront",
                            "GroupId"
                        ]
                    }
                ],
                "CustomInstanceProfileArn": {
                    "Fn::GetAtt" : ["profileFront", "Arn"]
                }
            }
        },
        "layerFrontElbAttachment" : {
            "Type" : "AWS::OpsWorks::ElasticLoadBalancerAttachment",
            "Properties" : {
                "ElasticLoadBalancerName" : { "Ref" : "elbFront" },
                "LayerId" : { "Ref" : "layerFront" }
            }
        },
        "layerLogstash": {
            "Type": "AWS::OpsWorks::Layer",
            "Properties": {
                "StackId": {
                    "Ref": "stack"
                },
                "Name": "Logstash",
                "Type": "custom",
                "Shortname": "logstash",
                "CustomRecipes": {
                    "Setup": [
                        "logstash"
                    ]
                },
                "EnableAutoHealing": "true",
                "AutoAssignElasticIps": "false",
                "AutoAssignPublicIps": "true",
                "InstallUpdatesOnBoot": "true",
                "CustomSecurityGroupIds": [
                    {
                        "Fn::GetAtt": [
                            "sgLogstash",
                            "GroupId"
                        ]
                    }
                ]
            }
        },
        "layerDash": {
            "Type": "AWS::OpsWorks::Layer",
            "Properties": {
                "StackId": {
                    "Ref": "stack"
                },
                "Name": "Dash",
                "Type": "php-app",
                "Shortname": "dash",
                "CustomRecipes": {
                    "Setup": [
                        "dash"
                    ]
                },
                "EnableAutoHealing": "true",
                "AutoAssignElasticIps": "false",
                "AutoAssignPublicIps": "true",
                "InstallUpdatesOnBoot": "true",
                "CustomSecurityGroupIds": [
                    {
                        "Fn::GetAtt": [
                            "sgDash",
                            "GroupId"
                        ]
                    }
                ]
            }
        },
        "instanceLogstash": {
            "Type": "AWS::OpsWorks::Instance",
            "Properties": {
                "StackId" : {"Ref":"stack"},
                "LayerIds" : [{"Ref":"layerLogstash"}],
                "InstanceType" : "m1.small"
            }
        },
        "instanceFront": {
            "Type": "AWS::OpsWorks::Instance",
            "Properties": {
                "StackId" : {"Ref":"stack"},
                "LayerIds" : [{"Ref":"layerFront"}],
                "InstanceType" : "m1.small"
            }
        },
        "dnsRecord": {
            "Type" : "AWS::Route53::RecordSet",
            "Properties" : {
                "HostedZoneName": "%dns_zone%",
                "Name": "%dns_name%",
                "Comment": "Managed by CloudFormation",
                "Type" : "A",
                "AliasTarget" : {
                    "HostedZoneId" : { "Fn::GetAtt" : ["elbFront", "CanonicalHostedZoneNameID"] },
                    "DNSName" : { "Fn::GetAtt" : ["elbFront","CanonicalHostedZoneName"] }
                }
            }
        }
    }
}
